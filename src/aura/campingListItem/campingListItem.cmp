<aura:component >
    <aura:attribute name='item' type='Camping_Item__c'/>
    <aura:if isTrue="{!v.item}">
      <p> Name : <ui:outputText value="{!v.item.Name}"/> </p>
      <p> Price : <ui:outputCurrency value="{!v.item.Price__c}"/> </p>
      <p> Quantity : <ui:outputNumber value="{!v.item.Quantity__c}"/> </p>
      <p> Packed Status : <ui:outputCheckbox value="{!v.item.Packed__c}"/> </p>
    </aura:if>
    <!--
    <p><ui:button label="Packed!" press="{!c.packItem}" disabled="{!v.item.Packed__c}"></ui:button></p>
    <p><ui:button label="Packed!" press="{!c.packItem}"></ui:button></p> -->
</aura:component>