<aura:component >
<aura:attribute name="newItem" type="Camping_Item__c" default="{'sobjectType':'Camping_Item__c','Quantity__c':0,'Price__c':0,'Packed__c':'false'}"/>
  <aura:registerEvent name="addItem" type="c:addItemEvent"/>
  <form class-="slds-form-stacked slds-m-around--large">
    <div class="slds-form-element slds-is-required">
      <div class="slds-form-element__control">
        <p>
          Name :
          <ui:inputText aura:id="itemName" class="slds-input" labelClass="slds-form-element__label" value="{!v.newItem.Name}" required="true"/>
        </p>
      </div>
    </div>
    <div class="slds-form-element slds-is-required">
      <div class="slds-form-element__control">
        <p>
          Quantity :
          <ui:inputNumber aura:id="itemQty" class="slds-input" labelClass="slds-form-element__label" value="{!v.newItem.Quantity__c}" required="true"/>
        </p>
      </div>
    </div>
    <div class="slds-form-element slds-is-required">
      <div class="slds-form-element__control">
        <p>
          Price :
          <ui:inputCurrency aura:id="itemPrice" class="slds-input" labelClass="slds-form-element__label" value="{!v.newItem.Price__c}" required="true"/>
        </p>
      </div>
    </div>
    <div class="slds-form-element slds-is-required">
      <div class="slds-form-element__control">
        <p>
          Packed Status :
          <ui:inputCheckbox aura:id="itemPacked" class="slds-checkbox" labelClass="slds-form-element__label" value="{!v.newItem.Packed__c}" required="true"/>
        </p>
      </div>
    </div>
    <p><ui:button label='Submit' press='{!c.submitForm}'/></p>
  </form>
</aura:component>